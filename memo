import {useState, useMemo, useEffect} from "react";
import './App.css';
//タスクデータ構造定義
type Task = {
    text: string;　//タスクの内容
    category: string;  //カテゴリー
    priority: number;  //優先度
    done: boolean;  //完了状態
};
//フィルターの種類の定義
type FilterType = 'all' | 'active' | 'completed';
//メインあぷりのコンポーネント
function App() {
    //ローカルストレージからタスクデータを初期化する関数
    const initializeTasks = (): Task[] => {
        try {
        　　//ローカルストレージから保存されたタスクを取得
            const savedtasks = localStorage.getItem("todotasks");
            //データがあればJSONをパースして返す、なかったら空白
            return savedtasks ? JSON.parse(savedtasks) : [];
        } catch (error) {
            //エラー発生コンソールログ　
            console.error('読み込みエラー', error);
            return [];
        }

    };
    // ===== useState フック（状態管理） =====
    const [tasks, setTasks] = useState<Task[]>(initializeTasks); //タスクリストの状態
    const [input, setInput] = useState(""); 　　　　　　　　　　　　//入力フィールドの状態
    const [filter, setFilter] = useState<FilterType>('all');　　//フィルターの状態
    const [selectedCategory, setSelectedCategory] = useState('仕事'); //カテゴリー
    const [selectedPriority, setSelectedPriority] = useState(2);  //優先度
　　
　　// ===== useEffect フック（副作用処理） =====　
　　//タスクが更新されるたびにローカルストレージに保存
    useEffect(() => {
        try {
       　　　//タスク入れつをJSONに変換保存
            localStorage.setItem("todotasks", JSON.stringify(tasks));
            //保存エラー
        } catch (error) {
            console.log(error);
        }
    }, [tasks]);  //タスク変更のたびに実行

    // ===== タスク操作関数 =====

    //add
    const addTask = () => {
        //空白の場合何もしない
        if (input.trim() === "") return;
        //新しいタスクオブジェクト作成　タスクリストについか
        setTasks([...tasks, {
         text: input, //入力されたテキスト
         done: false, //初期化状態は未完了
         category:selectedCategory,　//選択されたカテゴリー
         priority:selectedPriority}]); //選択された優先度
         //入力フィールドクリア
        setInput("");
    };

    //del
    const deleteTask = (index: number) => {
        //filterメゾットで指定したインデックス以外残す
        setTasks(tasks.filter((_, i) => i !== index));
    };

    //delall
    const deleteAllTasks = () => {
    　　 //ダイアログ表示OKが押された時のみ先じょ
        if (window.confirm('全部消すの？')) {
            setTasks([]) //空白列を設定して全てのタスクを削除
        }
    };

    //toggle
    const toggleTask = (index: number) => {
        //既存のタスク配列コピー
        const newTasks = [...tasks];
        //指定されたインデックスのタスク状態反転
        newTasks[index].done = !newTasks[index].done;
        //更新されたタスク配列を状態に設定
        setTasks(newTasks);
    };

    //filter
    const filteredTasks = useMemo(() => {
        if (filter === 'active') {
            //未完了タスクのみ返す
            return tasks.filter(task => !task.done);
        } else if (filter === 'completed') {
            //完了済みタスクのみ返す
            return tasks.filter(task => task.done);
        } else {
            //全てのタスクを返す
            return tasks;　//tasks or filterが変更された時のみ再計算
        }
    }, [tasks, filter]);

    //statistics
    const stats = {
        total: tasks.length,　     //そうタスク数
        active: tasks.filter(task => !task.done).length,  //未完了タスク数
        completed: tasks.filter(task => task.done).length  //完了済みタスク数
    };

    return (
        <div className="title">
            <h1>ToDo App</h1>
            <div className="input-area">
                <div className="input-row">
                    <input
                        value={input}
                        onChange={(e) => setInput(e.target.value)}
                        placeholder='タスクを入力'
                    />
                    <button onClick={addTask}>タスクを追加</button>
                </div>

                <div className="options-row">
                    <div className="category-section">
                        <label>カテゴリー:</label>
                        <select value={selectedCategory} onChange={(e) => setSelectedCategory(e.target.value)}>
                            <option value="仕事">仕事</option>
                            <option value="プライベート">プライベート</option>
                            <option value="買い物">買い物</option>
                            <option value="その他">その他</option>
                        </select>
                    </div>

                    <div className="priority-section">
                        <label>優先度:</label>
                        <div className="priority-buttons">
                            <button
                                className={selectedPriority === 3 ? 'active' : ''}
                                onClick={() => setSelectedPriority(3)}>高
                            </button>
                            <button
                                className={selectedPriority === 2 ? 'active' : ''}
                                onClick={() => setSelectedPriority(2)}>中
                            </button>
                            <button
                                className={selectedPriority === 1 ? 'active' : ''}
                                onClick={() => setSelectedPriority(1)}>低
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {/* filterbutton */}
            <div className="filter-buttons">
                <button
                    className={filter === 'all' ? 'active' : ''}
                    onClick={() => setFilter('all')}
                >
                    すべて ({stats.total})
                </button>
                <button
                    className={filter === 'active' ? 'active' : ''}
                    onClick={() => setFilter('active')}
                >
                    未完了 ({stats.active})
                </button>
                <button
                    className={filter === 'completed' ? 'active' : ''}
                    onClick={() => setFilter('completed')}
                >
                    完了済み ({stats.completed})
                </button>
            </div>

            <ul>
                {filteredTasks.map((task) => {
                    const originalIndex = tasks.findIndex(t => t === task);

                    const getPriority = (priority: number) => {
                        if (priority ===3) return {label: '高', color: 'red'};
                        if (priority ===2) return {label: '中', color: '#FFC800'};
                        if (priority ===1) return {label: '低', color: 'gray'};
                        return {label: '低', color: 'gray'};
                    };

                    const priorityInfo = getPriority(task.priority);
                    return (
                        <li key={originalIndex} className="taskmap">
                            <div className="task-content">
                                <div
                                    className="checkbox"
                                    onClick={() => toggleTask(originalIndex)}
                                >
                                    {task.done ? (
                                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                                            <circle cx="10" cy="10" r="9" fill="black" stroke="black" strokeWidth="2"/>
                                            <path d="M7 10L9 12L13 8" stroke="white" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"/>
                                        </svg>
                                    ) : (
                                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                                            <circle cx="10" cy="10" r="9" fill="none" stroke="black" strokeWidth="2"/>
                                        </svg>
                                    )}
                                </div>
                                <span
                                className="priority"
                                style={{
                                    backgroundColor: priorityInfo.color,
                                    color: 'white',
                                    padding: '2px 8px',
                                    borderRadius: '4px',
                                    fontSize: '12px',
                                    marginRight: '8px'
                                }}>
                                    {priorityInfo.label}
                                </span>
                                <span
                                    className={`task-text ${task.done ? 'completed' : ''}`}
                                >
                  {task.text}
                </span>
                                <span className="categorydisp" style={{ marginLeft: 'auto', color: '#666'}}>
                                    {task.category}
                                </span>
                            </div>
                            <button className="del" onClick={() => deleteTask(originalIndex)} >
                                ×
                            </button>
                        </li>
                    )
                })}
            </ul>

            {/* delall */}
            {tasks.length > 0 && (
                <div className="stats">
                    <p className="delallbut" onClick={deleteAllTasks}>delete all</p>
                </div>
            )}

        </div>
    );
}

export default App